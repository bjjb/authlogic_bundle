<h1>Login</h1>

<fieldset>
  <legend>Login using <%= link_to_function "Password / OpenID", "$('password_box').toggle(); $('openid_box').toggle();" %></legend>

<% form_for @user_session, :url => user_session_path do |f| %>
<div id="password_box"<% unless @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </p>
  <p>
    <%= f.submit "Login" %> | 
    <%= link_to "Forgot password", new_password_reset_path %>
  </p>
</div>
<% end %>

<% form_for @user_session, :url => user_session_path do |f| %>
<div id="openid_box"<% if @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
  <%= f.error_messages %>
  <p>
    <%= f.label :openid_identifier, link_to("Open ID", "http://openid.net/") %><br />
    <%= f.text_field :openid_identifier %>
  </p>
  <p>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </p>
  <p>
    <%= f.submit "Login" %>
  </p>
</div>
<% end %>

</fieldset>